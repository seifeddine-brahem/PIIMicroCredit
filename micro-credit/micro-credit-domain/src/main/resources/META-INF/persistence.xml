	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="sample-project-ejb">
	<!-- java:/PostgresDS   java:/PIIMicroCreditDS  java:/MySqlDS-->
		<jta-data-source>java:/PIIMicroCreditDS</jta-data-source>
