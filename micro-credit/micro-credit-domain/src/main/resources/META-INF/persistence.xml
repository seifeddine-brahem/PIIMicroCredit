		<class>tn.esprit.infini.micro_credit.entities.Department</class>
		<class>tn.esprit.infini.micro_credit.entities.LegalInformation</class>
		<class>tn.esprit.infini.micro_credit.entities.Loan</class>
		<class>tn.esprit.infini.micro_credit.entities.LoanInformation</class>
		<class>tn.esprit.infini.micro_credit.entities.News</class>
		<class>tn.esprit.infini.micro_credit.entities.Offer</class>
		<class>tn.esprit.infini.micro_credit.entities.Transaction</class>
		<class>tn.esprit.infini.micro_credit.entities.User</class>
		
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
